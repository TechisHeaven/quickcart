---
const slide = Astro.props.slide;
---

<div
  class="slide p-4 bg-blue-500 text-white h-64 relative rounded-2xl select-none"
  style={{ background: `url(${slide.img})` }}
>
  <h4 class="md:w-1/2 w-1/3 md:text-4xl text-2xl">
    {slide.title}
  </h4>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Anton&display=swap");

  .slide h4 {
    text-transform: uppercase;
    font-family: "Anton", serif;
  }
</style>
