---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  variant: "primary" | "secondary";
}

const { variant, ...props } = Astro.props;
const classButton = `p-4 border-2 border-solid border-black ${variant === "primary" && "bg-black text-white rounded-full"} ${variant === "secondary" && "text-black p-8"}`;
---

<a class:list={(Astro.props.class, classButton)} {...props}>
  <slot />
</a>
